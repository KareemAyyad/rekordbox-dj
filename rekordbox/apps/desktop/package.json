{
  "name": "@dropcrate/desktop",
  "version": "0.1.1",
  "description": "Hoover â€” DJ downloader + Rekordbox-ready workflow",
  "author": "Kareem Ayyad",
  "private": true,
  "type": "module",
  "main": "electron/main.mjs",
  "scripts": {
    "dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:web": "vite",
    "build": "vite build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "pack": "npm run build && electron-builder --dir",
    "dist:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "dist:mac:arm64:zip": "npm run build && electron-builder --mac zip --arm64",
    "dist:mac:x64": "npm run build && electron-builder --mac --x64",
    "dist:win:x64": "npm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "@dropcrate/core": "^0.1.0",
    "clsx": "^2.1.1",
    "electron-store": "^10.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "34.0.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.8.3",
    "vite": "^6.0.7",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.hoover.app",
    "productName": "Hoover",
    "electronVersion": "34.0.0",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asar": true,
    "mac": {
      "category": "public.app-category.music",
      "icon": "build/icon.icns",
      "target": [
        { "target": "dmg", "arch": ["arm64"] },
        { "target": "zip", "arch": ["arm64"] }
      ]
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
